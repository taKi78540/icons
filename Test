EntitesEtPourcentages = 
VAR TotalComptoir = 
    COUNTROWS('lecomptoir allvisits_181124')

RETURN
CONCATENATEX(
    FILTER(
        ADDCOLUMNS(
            VALUES('lecomptoir allvisits_181124'[visitor.pole]),
            "NbVisites", CALCULATE(COUNTROWS('lecomptoir allvisits_181124')),
            "Pourcent", DIVIDE(CALCULATE(COUNTROWS('lecomptoir allvisits_181124')), TotalComptoir, 0)
        ),
        [Pourcent] >= 0.01
    ),
    'lecomptoir allvisits_181124'[visitor.pole] & " (" & 
        FORMAT([Pourcent], "0%") & ")",
    ", ",
    [NbVisites],
    DESC
)
